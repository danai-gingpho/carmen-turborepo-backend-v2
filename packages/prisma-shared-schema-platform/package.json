{
  "name": "@repo/prisma-shared-schema-platform",
  "version": "1.0.0",
  "description": "Shared prisma schema for platform",
  "author": "CarmenSoftware.dev@gmail.com",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "commonjs",
  "keywords": [],
  "license": "ISC",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./generated": "./generated/index.ts",
    "./generated/*": "./generated/*"
  },
  "scripts": {
    "build": "tsc",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev --skip-generate",
    "db:deploy": "prisma migrate deploy",
    "db:migrate:reset": "prisma migrate reset",
    "db:seed": "ts-node -r tsconfig-paths/register prisma/seed.ts",
    "db:seed:reset": "prisma migrate reset --force && ts-node -r tsconfig-paths/register prisma/seed.ts",
    "db:seed.permission": "ts-node -r tsconfig-paths/register prisma/seed.permission.ts",
    "db:mock": "ts-node -r tsconfig-paths/register prisma/seed.ts && ts-node -r tsconfig-paths/register prisma/mock.ts",
    "db:mock:reset": "prisma migrate reset --force && ts-node -r tsconfig-paths/register prisma/seed.ts && ts-node -r tsconfig-paths/register prisma/mock.ts"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.45.2",
    "@prisma/client": "^6.19.1"
  },
  "devDependencies": {
    "@mainamiru/prisma-types-generator": "^1.1.14",
    "@nestjs/common": "^10.0.0",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.14.0",
    "@types/pg": "^8.15.5",
    "@types/readable-stream": "^4.0.22",
    "@types/superagent": "^8.1.9",
    "@types/supertest": "^6.0.3",
    "@types/validator": "^13.15.9",
    "prisma": "^6.19.1",
    "prisma-json-types-generator": "^3.5.4",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  }
}
