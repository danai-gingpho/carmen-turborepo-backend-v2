{
  "name": "carmen-turborepo-backend",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:base": "turbo run dev:base",
    "dev:business": "turbo run dev:business",
    "prod:base": "turbo run prod:base",
    "dev:tenant": "turbo run dev:tenant",
    "dev:prod": "turbo run dev:prod",
    "dev:report": "turbo run dev:report",
    "start:prod": "turbo run start:prod",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:generate": "turbo run db:generate",
    "db:migrate": "turbo run db:migrate",
    "db:deploy": "turbo run db:deploy",
    "build:package": "turbo run build:package",
    "setup": "bun install && turbo run build:package",
    "postinstall": "turbo run build:package"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "prisma": "^6.19.1",
    "turbo": "^2.5.8",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.5",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@nestjs/common": "^11.1.3",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/swagger": "^11.2.0",
    "@prisma/client": "^6.19.1",
    "@sentry/nestjs": "^10.7.0",
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.13.5",
    "@types/bcrypt": "^5.0.2",
    "bcrypt": "^5.1.1",
    "class-validator": "^0.14.3",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "npm-check-updates": "^17.1.18",
    "passport-http-bearer": "^1.0.1",
    "prisma-json-types-generator": "^3.5.4",
    "supertest": "^7.1.1",
    "uuid": "^8.3.2"
  },
  "trustedDependencies": [
    "@nestjs/core",
    "@prisma/client",
    "@prisma/engines",
    "@scarf/scarf",
    "core-js-pure",
    "esbuild",
    "prisma",
    "protobufjs"
  ]
}
