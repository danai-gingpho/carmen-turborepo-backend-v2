{
  "name": "micro-business",
  "version": "0.0.1",
  "description": "Consolidated business microservice combining authen, cluster, license, log, notification, inventory, master, procurement, and recipe services",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "dev": "ts-node-dev -r tsconfig-paths/register src/main.ts",
    "dev:business": "ts-node-dev -r tsconfig-paths/register src/main.ts",
    "dev:prod": "ts-node -r tsconfig-paths/register src/main.ts",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.13.0",
    "@grpc/proto-loader": "^0.7.13",
    "@nestjs/common": "^11.0.11",
    "@nestjs/core": "^11.0.11",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/microservices": "^11.0.11",
    "@nestjs/platform-express": "^11.0.11",
    "@nestjs/platform-socket.io": "^11.0.11",
    "@nestjs/websockets": "^11.0.11",
    "@prisma/client": "^6.19.1",
    "@repo/log-events-library": "*",
    "@repo/prisma-shared-schema-platform": "*",
    "@repo/prisma-shared-schema-tenant": "*",
    "@sentry/nestjs": "^10.11.0",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.5",
    "dotenv": "^17.2.2",
    "exceljs": "^4.4.0",
    "ioredis": "^5.6.0",
    "kafkajs": "^2.2.4",
    "mqtt": "^5.10.4",
    "nats": "^2.29.2",
    "nest-winston": "^1.10.2",
    "nestjs-zod": "^5.0.1",
    "nodemailer": "^6.9.16",
    "pdfmake": "^0.2.18",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "socket.io": "^4.7.4",
    "winston": "^3.17.0",
    "winston-loki": "^6.1.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.5",
    "@nestjs/schematics": "^11.0.2",
    "@nestjs/testing": "^11.0.11",
    "@repo/eslint-config": "*",
    "@swc/cli": "^0.7.7",
    "@swc/core": "^1.11.24",
    "@types/bun": "^1.2.9",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.0",
    "@types/nodemailer": "^6.4.17",
    "@types/pdfmake": "^0.2.9",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.6",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": [
        "ts-jest",
        {
          "tsconfig": {
            "esModuleInterop": true,
            "allowSyntheticDefaultImports": true
          }
        }
      ]
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1",
      "^src/(.*)$": "<rootDir>/$1"
    }
  }
}
